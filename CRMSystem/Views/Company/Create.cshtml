@model CRMSystem.ViewModels.CompanyVM

@{
    ViewBag.Title = "Create";
}


<h2>Create new Company</h2>
<a href="/Company/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Company/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Company Name</label>
        <input type="text" name="Name" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Company Address</label>
        <input type="text" name="Address" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Company City</label>
        <input type="text" name="City" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Company Zip</label>
        <input type="text" name="Zip" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Company Phone</label>
        <input type="text" name="Phone" required class="form-control" />
    </div>
    <input type="submit" name="SaveButton" class="btn btn-success" value="Save" />
</form>