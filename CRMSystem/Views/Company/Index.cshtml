@model CRMSystem.ViewModels.CompanyVM

@{
    ViewBag.Title = "Index";
}

<h2>All Companies</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Zip</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var companyvm in Model.Companies)
        {
            <tr>
                <td>@companyvm.Id</td>
                <td>@companyvm.Name</td>
                <td>@companyvm.Address</td>
                <td>@companyvm.City</td>
                <td>@companyvm.Zip</td>
                <td>@companyvm.Phone</td>
                <td>
                    <a href="/Company/Show/@companyvm.Id" class="btn btn-primary btn-xs">Show</a>
                    <a href="/Company/Edit/@companyvm.Id" class="btn btn-warning btn-xs">Edit</a>
                    <a href="/Company/Delete/@companyvm.Id" class="btn btn-danger btn-xs" onclick="return confirm('You are about to delete a company. Are you sure you want to continue?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Company/Create" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span> Create a new company</a><br />
<a href="/Contact/Create" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span> Create a new contact</a><br />


