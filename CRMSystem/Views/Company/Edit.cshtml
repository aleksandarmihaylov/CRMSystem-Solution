@model CRMSystem.ViewModels.CompanyVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit your company</h2>

<a href="/Company/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Company/Edit" method="post" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="form-group">
        <label>Company Name</label>
        <input type="text" name="Name" required class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Company Address</label>
        <input type="text" name="Address" required class="form-control" value="@Model.Address" />
    </div>
    <div class="form-group">
        <label>Company City</label>
        <input type="text" name="City" required class="form-control" value="@Model.City" />
    </div>
    <div class="form-group">
        <label>Company Zip</label>
        <input type="text" name="Zip" required class="form-control" value="@Model.Zip" />
    </div>
    <div class="form-group">
        <label>Company Phone</label>
        <input type="text" name="Phone" required class="form-control" value="@Model.Phone" />
    </div>
    <input type="submit" name="SaveButton" class="btn btn-success" value="Update" />
</form>
