@model CRMSystem.ViewModels.ContactVM

@{
    ViewBag.Title = "Create";
}

<h2>Create new Contact</h2>

<a href="/Contact/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Contact/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Contact Company</label>
        <select name="CompanyId" required>
            <option value="0" disabled>Please select a company</option>
            @foreach (var company in Model.Companies)
            {
                <option value="@company.Id">@company.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Contact First name</label>
        <input type="text" name="FirstName" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Contact Last name</label>
        <input type="text" name="LastName" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Contact Address</label>
        <input type="text" name="Address" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Contact City</label>
        <input type="text" name="City" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Contact Zip</label>
        <input type="text" name="Zip" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Contact Phone</label>
        <input type="text" name="Phone" required class="form-control" />
    </div>

    <input type="submit" name="SaveButton" class="btn btn-success" value="Save" />
</form>