@model CRMSystem.ViewModels.ContactVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit your contact</h2>

<a href="/Contact/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Contact/Edit" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Contact Company</label>
        <select name="CompanyId">
            <option value="0" disabled>Please select a company</option>
            @foreach (var company in Model.Companies)
            {
                if (company.Id == Model.CompanyId)
                {
                    <option value="@company.Id" selected>@company.Name</option>
                }
                else
                {
                    <option value="@company.Id">@company.Name</option>
                }

            }
        </select>
    </div>
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="form-group">
        <label>Contact First Name</label>
        <input type="text" name="FirstName" required class="form-control" value="@Model.FirstName" />
    </div>
    <div class="form-group">
        <label>Contact First Name</label>
        <input type="text" name="LastName" required class="form-control" value="@Model.LastName" />
    </div>
    <div class="form-group">
        <label>Contact Address</label>
        <input type="text" name="Address" required class="form-control" value="@Model.Address" />
    </div>
    <div class="form-group">
        <label>Contact City</label>
        <input type="text" name="City" required class="form-control" value="@Model.City" />
    </div>
    <div class="form-group">
        <label>Contact Zip</label>
        <input type="text" name="Zip" required class="form-control" value="@Model.Zip" />
    </div>
    <div class="form-group">
        <label>Contact Phone</label>
        <input type="text" name="Phone" required class="form-control" value="@Model.Phone" />
    </div>
    <input type="submit" name="SaveButton" class="btn btn-success" value="Update" />
</form>

