@model CRMSystem.ViewModels.ProjectVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit your project</h2>

<a href="/Project/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Project/Edit" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Project Company</label>
        <select name="CompanyId">
            <option value="0" disabled>Please select a company</option>
            @foreach (var company in Model.Companies)
            {
                if (company.Id == Model.CompanyId)
                {
                    <option value="@company.Id" selected>@company.Name</option>
                }
                else
                {
                    <option value="@company.Id">@company.Name</option>
                }
            }
        </select>
    </div>
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="form-group">
        <label>Project Name</label>
        <input type="text" name="Name" required class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Project Description</label>
        <input type="text" name="Description" required class="form-control" value="@Model.Description" />
    </div>
    <input type="submit" name="SaveButton" class="btn btn-success" value="Update" />
</form>