@model CRMSystem.ViewModels.ProjectVM

@{
    ViewBag.Title = "Create";
}

<h2>Create a new project</h2>
<a href="/Project/" class="btn btn-primary btn-xs">Back</a><br />
<form action="/Project/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label>Project Company</label>
        <select name="CompanyId" required>
            <option value="0" disabled>Please select a company</option>
            @foreach (var company in Model.Companies)
            {
                <option value="@company.Id">@company.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Project Name</label>
        <input type="text" name="Name" required class="form-control" />
    </div>
    <div class="form-group">
        <label>Project Description</label>
        <input type="text" name="Description" required class="form-control" />
    </div>
    <input type="submit" name="SaveButton" class="btn btn-success" value="Save" />
</form>
